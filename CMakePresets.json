{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default config",
      "description": "Default build configuration",
      "binaryDir": "${sourceDir}/Builds/${presetName}"
    },
    {
      "name": "ios",
      "displayName": "Configure iOS",
      "description": "Configure an iOS crosscompile build",
      "inherits": "default",
      "generator": "Xcode",
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Darwin" },
      "cacheVariables": {
        "CMAKE_CROSSCOMPILING": "TRUE",
        "CMAKE_SYSTEM_NAME": "iOS",
        "CMAKE_XCODE_ATTRIBUTE_CODE_SIGN_IDENTITY": "\"iPhone Developer\"",
        "CMAKE_XCODE_ATTRIBUTE_DEVELOPMENT_TEAM": "$env{DEV_TEAM_ID}"
      }
    },
    {
      "name": "tests",
      "displayName": "Configure for testing",
      "description": "Confuguration with testing enabled",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "LEMONS_BUILD_TESTS": "ON",
        "LEMONS_GENERATE_TRANSLATION_FILES": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "all",
      "displayName": "Build all",
      "description": "Builds everything",
      "configurePreset": "default"
    },
    {
      "name": "ios",
      "displayName": "Builds iOS",
      "description": "Builds everything for iOS",
      "configurePreset": "ios",
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Darwin" },
      "nativeToolOptions": ["-sdk", "iphonesimulator", "-allowProvisioningUpdates"]
    },
    {
      "name": "tests",
      "displayName": "Build tests",
      "description": "Builds all tests",
      "configurePreset": "tests",
      "configuration": "Debug",
      "targets": ["ALL_PLUGINS", "UnitTestRunner"]
    }
  ],
  "testPresets": [
    {
      "name": "base",
      "configurePreset": "tests",
      "configuration": "Debug",
      "output": {
        "outputLogFile": "${sourceDir}/logs/tests/${presetName}.log"
      },
      "execution": {
        "noTestsAction": "error"
      },
      "hidden": true
    },
    {
      "name": "all",
      "displayName": "Run tests",
      "description": "Runs all tests",
      "inherits": "base"
    },
    {
      "name": "units",
      "displayName": "Run unit tests",
      "description": "Runs the Lemons unit tests",
      "inherits": "base",
      "filter": {
        "include": {
          "name": "LemonsUnitTests"
        }
      }
    },
    {
      "name": "pluginval",
      "displayName": "Run pluginval tests",
      "description": "Runs all pluginval tests",
      "inherits": "base",
      "filter": {
        "include": {
          "name": "-Pluginval+"
        }
      }
    }
  ]
}